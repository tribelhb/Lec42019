<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="1264dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nothing to tell"
            android:textSize="64sp" />

        <Button
            android:id="@+id/clickThisButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Click This Button" />

        <Button
            android:id="@+id/lameButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Don't Click Me!" />

        <TextView
            android:id="@+id/valueTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="64sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:max="111" />

        <edu.up.cs301.tribelhb.lec4_2019.MySurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="600dp"
            android:layout_height="400dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>